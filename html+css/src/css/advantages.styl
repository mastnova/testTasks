.advantages {
  &__icon {
    margin 100px auto 40px
  }

  &__header {
    font-family open-sans_semibold, sans-serif
    color #515151
    text-transform uppercase
    text-align center
    width 525px
    margin-left auto
    margin-right auto
    margin-bottom 53px
    font-size 31px
    line-height 47px
  }

  &__text {
    font-family open-sans_regular, sans-serif
    color #515151
    text-align center
    width 915px
    margin-left auto
    margin-right auto
    margin-bottom 38px
    font-size 19px
    line-height 31px
  }
}

.round-marker {
  font-family open-sans_semibold, sans-serif
  display inline-block
  background-color #5f5f5f
  color #fff
  width 43px
  height 43px
  margin-right 25px
  line-height 43px
  text-align center
  font-size 23px
  border-radius 50%
  position relative
  top -5px
}

.tabs {
  width 969px
  height 390px
  margin-left auto
  margin-right auto
  margin-top 153px
  display flex
  position relative
  overflow hidden

  &__label {
    font-family open-sans_light, sans-serif
    color #656565
    font-size 34px
    border-bottom 1px solid #e6e6e6
    flex-grow 1
    height 81px
    cursor pointer

    &_label2 {
      text-align center
    }

    &_label3 {
      text-align right
    }
  }

  &__content {
    width 965px
    position absolute
    top 117px
    left 0
    box-sizing border-box
    font-family open-sans_regular, sans-serif
    background-image url('../images/glasses.png')
    background-repeat no-repeat
    background-position 84px 52px
    padding-left 302px
  }

  &__header {
    color #add136
    font-size 23px
    letter-spacing 1px
    margin-bottom 27px
  }

  &__text {
    color #606060
    line-height 29px
    font-size 17px
  }
}

.tabs__content_tab1,
.tabs__content_tab2,
.tabs__content_tab3 {
  opacity 0
}

#tab1:checked ~ .tabs__content_tab1,
#tab2:checked ~ .tabs__content_tab2,
#tab3:checked ~ .tabs__content_tab3 {
  opacity 1
}

#tab1:checked ~ .tabs__label_label1,
#tab2:checked ~ .tabs__label_label2,
#tab3:checked ~ .tabs__label_label3 {
  border-bottom-color #add136

  .round-marker {
    background-color #add136
  }
}
