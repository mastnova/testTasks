body
  max-width 1300px
  min-width 1028px
  margin-left auto
  margin-right auto

.adv-icon {
  width 58px
  height 58px
  background-image url('../images/adv-icon.png')
}

.progress-bar {
  background-color #e3e3e3
  border-radius 10px
  border-style none
  overflow hidden

  &__inner {
    background-color #add136
    height 100%
  }
}

.animate-link {
  position relative

  &:before {
    content: "";
    position absolute
    width 100%
    height 2px
    bottom 0
    left 0
    background-color #484848
    visibility hidden
    transform scaleX(0)
    transition all 0.2s ease-in-out 0s
  }

  &:hover:before {
    visibility visible
    transform scaleX(1)
  }
}

button {
  cursor pointer
  outline none
  transition opacity .2s

  &:hover {
    opacity .8;
  }
}
